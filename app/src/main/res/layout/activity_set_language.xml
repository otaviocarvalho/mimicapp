<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.oberin.imagemacao.SetLanguageActivity"
    android:background="#ff9a70ff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Português"
        android:id="@+id/btnPortuguese"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:enabled="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:id="@+id/btnEnglish"
        android:layout_below="@+id/btnPortuguese"
        android:layout_alignLeft="@+id/btnPortuguese"
        android:layout_alignStart="@+id/btnPortuguese"
        android:layout_alignRight="@+id/btnPortuguese"
        android:layout_alignEnd="@+id/btnPortuguese"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:enabled="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Français"
        android:id="@+id/btnFrench"
        android:layout_below="@+id/btnEnglish"
        android:layout_alignRight="@+id/btnEnglish"
        android:layout_alignEnd="@+id/btnEnglish"
        android:layout_alignLeft="@+id/btnEnglish"
        android:layout_alignStart="@+id/btnEnglish"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:enabled="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Español"
        android:id="@+id/btnSpanish"
        android:layout_below="@+id/btnFrench"
        android:layout_alignRight="@+id/btnFrench"
        android:layout_alignEnd="@+id/btnFrench"
        android:layout_alignLeft="@+id/btnFrench"
        android:layout_alignStart="@+id/btnFrench"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:enabled="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pусский"
        android:id="@+id/btnRussian"
        android:layout_below="@+id/btnSpanish"
        android:layout_alignRight="@+id/btnFrench"
        android:layout_alignEnd="@+id/btnFrench"
        android:layout_alignLeft="@+id/btnSpanish"
        android:layout_alignStart="@+id/btnSpanish"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:enabled="true" />
</RelativeLayout>
