<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.oberin.imagemacao.MenuCategories"
    android:background="#ff9a70ff">


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category_1"
        android:id="@+id/switch1"
        android:checked="false"
        android:switchPadding="15dp"
        android:textSize="20dp"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/switch3"
        android:layout_alignRight="@+id/switch3"
        android:layout_alignEnd="@+id/switch3" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category_2"
        android:id="@+id/switch2"
        android:checked="false"
        android:switchPadding="15dp"
        android:textSize="20dp"
        android:layout_marginBottom="48dp"
        android:layout_above="@+id/btnCategoryPlay"
        android:layout_centerHorizontal="true" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category_3"
        android:id="@+id/switch3"
        android:checked="false"
        android:switchPadding="15dp"
        android:textSize="20dp"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/switch2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Categories"
        android:id="@+id/textView3"
        android:layout_marginTop="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/switch1"
        android:layout_alignStart="@+id/switch1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play!"
        android:id="@+id/btnCategoryPlay"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
